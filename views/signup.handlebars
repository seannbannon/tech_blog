<div class="row" style="margin:20px; border:solid; border-color: border-color:rgb(37, 1, 1);">
  <div class="col-12" style="padding:0">
    <h2 style="background-color: rgb(37, 1, 1); color:rgb(219, 221, 219); padding:10px ">Sign Up</h2>

    <form class="form signup-form" style="padding:10px; padding-top:0">
        <div class="form-group">
        <label for="name-signup">Username:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-dark" type="submit" style="width:100%">Sign Up!</button>
        <a href="/login" style="color:rgb(37, 1, 1)">Login Instead</a>
      </div>
    </form>
  </div>
</div>
